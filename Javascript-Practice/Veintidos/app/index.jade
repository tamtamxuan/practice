extends layouts/default
block variables
  - bodyClass = "index"
block content
  .awwwards
    a(href="http://www.awwwards.com" target="_blank") Awwwards
  main
    section.intro
      .intro__logo
        .intro__gris
        .intro__naranja
        .intro__grado
      .claim
        .claim__line
        .claim__mascara-claim
          h3 Independent Design Agency
    // section slider
    .wrapp-cases
      .til-section
        h6.animated.flipInY.visible.hidden.fadeInUp  Cases
        .line-scroll
      section#cases
        .pogoSlider-slide.mediaslider#casoUno
          .pogoSlider-slide-element
            h3.name__title HENRY SAIZ
            .line__enlarge
            a(href="#") Ver caso
        .pogoSlider-slide.mediaslider#casoDos
          .pogoSlider-slide-element
            h3.name__title MUGAKO FESTIVAL
            .line__enlarge
            a(href="#") Ver caso
        .pogoSlider-slide.mediaslider#casoTres
          .pogoSlider-slide-element
            h3.name__title BLUE DOOR
            .line__enlarge
            a(href="#") Ver caso
    // section cases
    section.latest__works.clearfix
      .til-section
        h6.animated.flipInY.visible.hidden.fadeInUp  Last works
        .line-scroll
      ul.latest__preview
        li.latest__item.latest__nakogu.animatedBorderSprite
          h2.latest__item--name
            span MUGA
            span KO
          .latest__img
            .tilt
              .tilt__back.tilt__muga
          .animatedBorderSprite.animatedBorderSprite-top
          .animatedBorderSprite.animatedBorderSprite-bottom
          .animatedBorderSprite
          .animatedBorderSprite
        li.latest__item.latest__rubencrea.animatedBorderSprite
          h2.latest__item--name
            span RUBEN
            span CREA
          .latest__img
            .tilt
              .tilt__back.tilt__ruben
    // service
    section.services.clearfix
      .mascara-trama
      .services__block
      p.services__title
        | We are a
        span multidisciplinary agency
        | that specialises in digital projects with a wide range of creative and design services.
      .til-section
        h6.animated.flipInY.visible.hidden.fadeInUp  Services
        .line-scroll
      ul.services__list
        li.services__item.services__web
          h3 Web Sites
        li.services__item.services__landing
          h3 Landing Pages
        li.services__item.services__wordspress
          h3 Wordpress
        li.services__item.services__branding
          h3 Branding
        li.services__item.services__corporate
          h3 Corporate Identity
        li.services__item.services__advertising
          h3 Advertising
  footer.footer__block
    ul.footer__social
      li
        a(herf='https://www.facebook.com/22grad2')
          img(src='../images/iconon-fb.png' alt='facebook')
      li
        a(herf='href="https://twitter.com/22GRA2"')
          img(src='../images/icon-twitter.png' alt='twitter')

