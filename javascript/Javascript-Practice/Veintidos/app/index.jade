extends layouts/default
block variables
  - bodyClass = "index"
block content
  .awwwards
    a(href="http://www.awwwards.com" target="_blank") Awwwards
  main
    section.intro
      .intro__logo
        .intro__gris
        .intro__naranja
        .intro__grado
      .claim
        .claim__line
        .claim__mascara-claim
          h3 Independent Design Agency
    // section slider
    .wrapp-cases
      .til-section
        h6 Cases
        .line-scroll
      section#cases
    // section cases
    section.latest__works.clearfix
      .til-section
        h6.animated.flipInY.visible.hidden.fadeInUp  Last works
        .line-scroll
      ul#preview.latest__preview
        li.latest__item.latest__nakogu
          h2.latest__item--name
            span MUGA
            span KO
          .latest__img
            img.tilt-effect(data-tilt-options='{ "opacity" : 0.6, "movement": { "perspective" : 1500, "translateX" : 10, "translateY" : 10, "translateZ" : 2, "rotateX" : 3, "rotateY" : 3 } }' src="../images/small/preview-home-mugako-gris.jpg" alt="mugako")
        li.latest__item.latest__rubencrea
          h2.latest__item--name
            span RUBEN
            span CREA
          .latest__img
            img.tilt-effect(data-tilt-options='{ "opacity" : 0.6, "movement": { "perspective" : 1500, "translateX" : 10, "translateY" : 10, "translateZ" : 2, "rotateX" : 3, "rotateY" : 3 } }' src="../images/small/preview-home-rubencrea.jpg" alt="rubencrea")
    // service
    section.services.clearfix
      .mascara-trama
      .services__block
      p.services__title
        | We are a
        span multidisciplinary agency
        | that specialises in digital projects with a wide range of creative and design services.
      .til-section
        h6.animated.flipInY.visible.hidden.fadeInUp  Services
        .line-scroll
      // list item services
      ul#services.services__list
  // footer page home
  footer.footer__block
    ul#footerSocial.footer__social

